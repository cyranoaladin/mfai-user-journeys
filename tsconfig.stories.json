{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["node", "jest", "@storybook/react", "@storybook/addon-essentials"],
    "emitDeclarationOnly": false,
    "isolatedModules": false,
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.stories.tsx",
    "**/*.stories.ts",
    ".storybook/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    ".next",
    "out"
  ]
} 